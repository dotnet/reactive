<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;uap10.0.18362</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Legacy facade for Reactive Extensions (Rx) for .NET</Description>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\NuGet.Facades.Readme.md" Pack="true" PackagePath="\readme.md" />
  </ItemGroup>
  

  <ItemGroup Condition="'$(RxHasWpf)' == 'true'">
    <ProjectReference Include="..\..\src\System.Reactive.Wpf\System.Reactive.Wpf.csproj">
      <Aliases>SystemReactiveForWpf</Aliases>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup Condition="'$(RxHasWinRT)' == 'true'">
    <ProjectReference Include="..\..\src\System.Reactive.WindowsRuntime\System.Reactive.WindowsRuntime.csproj">
      <Aliases>SystemReactiveForWindowsRuntime</Aliases>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\System.Reactive\System.Reactive.csproj">
      <Aliases>SystemReactive</Aliases>
    </ProjectReference>
  </ItemGroup>
</Project>