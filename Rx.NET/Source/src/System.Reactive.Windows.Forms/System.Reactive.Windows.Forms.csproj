<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net8.0-windows</TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <PropertyGroup>
    <PackageTags>Rx;Reactive;Extensions;Observable;LINQ;Events;Windows Forms</PackageTags>
    <Description>Windows Forms support for Reactive Extensions (Rx) for .NET</Description>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\AssemblyInfo.cs" Link="Properties\AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <!--
    The use of Aliases here prevents the copies of the Windows Forms types that are build into System.Reactive's
    runtime assemblies for binary compatibility interfering with the types in this assembly.
    -->
    <ProjectReference Include="..\System.Reactive\System.Reactive.csproj">
      <Aliases>SystemReactive</Aliases>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="build\NuGet.Readme.md" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="build\" />
  </ItemGroup>

</Project>